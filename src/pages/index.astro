  <!-- STYLES -->
  <style>
    :root {
      --primary: #1a365d;
      --secondary: #2c7a7b;
      --success: #10b981;
      --bg-light: #f8fafc;
      --white: #ffffff;
      --text: #334155;
    }

    body {
      color: var(--text);
      font-family: system-ui, -apple-system, sans-serif;
    }

    .capacity-banner {
      background: var(--success);
      color: white;
      text-align: center;
      padding: 12px;
      font-weight: bold;
      font-size: 0.95rem;
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .pulse {
      animation: opacityPulse 2s infinite;
      margin-right: 5px;
    }

    @keyframes opacityPulse {
      0% { opacity: 1; }
      50% { opacity: 0.4; }
      100% { opacity: 1; }
    }

    .hero {
      padding: 5rem 0;
      background: white;
    }

    .kicker {
      color: var(--secondary);
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 0.5rem;
    }

    .hero-grid {
      display: grid;
      grid-template-columns: 1.4fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .hero-description {
      font-size: 1.2rem;
      line-height: 1.6;
      margin-bottom: 2rem;
    }

    .highlight {
      display: flex;
      align-items: flex-start;
      gap: 10px;
      margin-bottom: 12px;
      font-size: 1rem;
    }

    .check {
      color: var(--success);
      font-weight: bold;
    }

    .photo-card {
      background: white;
      padding: 1rem;
      border-radius: 15px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .photo-card img {
      width: 100%;
      border-radius: 10px;
      filter: grayscale(10%);
    }

    .profile-link {
      display: inline-block;
      margin-top: 0.35rem;
      color: var(--secondary);
      text-decoration: none;
      font-weight: 600;
    }

    .profile-link:hover {
      text-decoration: underline;
    }

    .btn {
      padding: 1rem 2rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 700;
      transition: 0.3s;
      cursor: pointer;
      display: inline-block;
    }

    .btn-primary {
      background: var(--primary);
      color: white;
      border: none;
    }

    .btn-primary:hover {
      background: #2a4365;
      transform: translateY(-2px);
    }

    .btn-secondary {
      border: 2px solid var(--primary);
      color: var(--primary);
      background: transparent;
    }

    .grid-three {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2.5rem;
    }

    .help-item,
    .trust-item,
    .service-card {
      background: var(--bg-light);
      padding: 2.5rem;
      border-radius: 15px;
      border: 1px solid #e2e8f0;
      transition: 0.3s;
    }

    .service-card:hover,
    .help-item:hover,
    .trust-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
    }

    .service-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .text-link {
