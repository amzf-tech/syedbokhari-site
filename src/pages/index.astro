      color: white;
      padding: 5rem 0;
      text-align: center;
    }

    .cta-actions {
      display: flex;
      gap: 1.5rem;
      justify-content: center;
      margin-top: 2.5rem;
      flex-wrap: wrap;
    }

    .btn-white {
      background: white;
      color: var(--primary);
    }

    .btn-outline-white {
      border: 2px solid white;
      color: white;
      background: transparent;
    }

    @media (max-width: 992px) {
      .hero-grid {
        grid-template-columns: 1fr;
        text-align: center;
      }

      .hero-image {
        order: -1;
        max-width: 400px;
        margin: 0 auto 2rem;
      }

      .highlight {
        justify-content: center;
      }

      .cta-actions {
        flex-direction: column;
        align-items: center;
      }
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    .h1 {
      font-size: 3rem;
      color: var(--primary);
      line-height: 1.2;
      margin-bottom: 1.5rem;
    }

    .h2 {
      font-size: 2rem;
      color: var(--primary);
    }

    .mb-3 {
      margin-bottom: 2rem;
    }

    .text-center {
      text-align: center;
    }

    .small {
      font-size: 0.9rem;
    }
  </style>
</BaseLayout>