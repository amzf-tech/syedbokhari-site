---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

const title = "Syed Bokhari | Behaviour Support (Under Supervision)";
const description =
  "Syed Bokhari provides behaviour support support under professional supervision, including functional assessment, behaviour support plan development, and implementation support. NDIS Commission application under assessment via the Alternate Pathway.";
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <!-- HERO -->
  <section class="container hero">
    <div class="hero-grid">
      <!-- TEXT -->
      <div>
        <p class="kicker">Behaviour Support</p>

        <h1 class="h1">Behaviour Support</h1>

        <p class="p">
          I work under professional supervision to support NDIS participants, families, and provider teams
          with positive, respectful, and evidence-informed behaviour support.
          <strong> Application under assessment by the NDIS Quality and Safeguards Commission (Alternate Pathway).</strong>
        </p>

        <div class="actions">
          <a class="btn" href="/contact">Make an enquiry</a>
          <a class="btn secondary" href="/services">View services</a>
        </div>

        <p class="small" style="margin-top:0.75rem">
          <a
            href="https://www.linkedin.com/in/syed-fr-bokhari/"
            target="_blank"
            rel="noopener noreferrer"
          >
            View LinkedIn profile
          </a>
        </p>

        <div class="notice">
          <strong>Registration & service delivery:</strong>
          <span class="small">
            My application is currently under assessment by the NDIS Quality and Safeguards Commission
            (Alternate Pathway). During this period, behaviour support services may be delivered under
            supervision and through an appropriately registered organisation, in line with NDIS requirements.
            Independent service delivery under my own NDIS registration will commence following approval.
          </span>
        </div>
      </div>

      <!-- IMAGE -->
      <div class="card photo">
        <img
          src="/images/headshot.jpg"
          alt="Syed Bokhari"
          loading="eager"
        />
      </div>
    </div>
  </section>

  <!-- OVERVIEW -->
  <section class="container overview">
    <div class="grid cols-3">
      <div class="card pad">
        <h2 class="h2">Assessment</h2>
        <p class="p">
          Functional behaviour assessment and structured information gathering
          to understand behaviour within its context.
        </p>
      </div>

      <div class="card pad">
        <h2 class="h2">Plan Development</h2>
        <p class="p">
          Behaviour Support Plan (BSP) development aligned with NDIS expectations
          and participant needs.
        </p>
      </div>

      <div class="card pad">
        <h2 class="h2">Implementation Support</h2>
        <p class="p">
          Coaching and guidance for families and support teams to support consistent
          and safe implementation.
        </p>
      </div>
    </div>
  </section>

  <!-- SEO SUPPORT -->
  <section class="container seo">
    <h2 class="h2">Behaviour Support Services</h2>
    <p class="p">
      Behaviour support services include functional assessment, BSP development,
      implementation support, and collaboration with providers across Australia.
      Services are provided under supervision and through an appropriately registered organisation
      until individual NDIS registration is approved.
    </p>

    <p class="p">
      Professional enquiries:
      <a href="mailto:syed@syedbokhari.com.au">syed@syedbokhari.com.au</a>
      Â·
      <a href="tel:0411072466">0411 072 466</a>
    </p>
  </section>

  <style>
    .hero {
      padding: 1rem 0 0;
      min-height: 65vh;
    }

    .hero-grid {
      display: grid;
      gap: 1.5rem;
      align-items: center;
    }

    .actions {
      display: flex;
      gap: 0.75rem;
      margin-top: 1.25rem;
      flex-wrap: wrap;
    }

    .photo {
      border-radius: 16px;
      padding: 1rem;
      background: #ffffff;
    }

    .photo img {
      width: 100%;
      height: auto;
      max-height: 420px;
      display: block;
      object-fit: contain;
    }

    .notice {
      margin-top: 1.25rem;
      padding: 1rem;
      border: 1px solid rgba(15, 23, 42, 0.15);
      border-radius: 12px;
      background: rgba(255, 255, 255, 0.85);
    }

    .small {
      display: block;
      margin-top: 0.25rem;
      color: #475569;
      font-size: 0.95rem;
    }

    .overview {
      margin-top: 1.25rem;
    }

    .pad {
      padding: 1.25rem;
    }

    .seo {
      margin-top: 2rem;
    }

    @media (min-width: 900px) {
      .hero-grid {
        grid-template-columns: 1.2fr 0.8fr;
      }

      .photo img {
        max-height: 480px;
      }
    }
  </style>
</BaseLayout>
