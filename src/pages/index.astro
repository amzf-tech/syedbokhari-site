---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

const title = "Syed Bokhari | Registered Behaviour Support Practitioner | NDIS PBS";
const description = "Registered NDIS behaviour support services across Australia. Specialist in Functional Behaviour Assessment (FBA) and evidence-based PBS plans.";
const gaId = "G-8F52E8QTN1";
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`} slot="head"></script>
  <script is:inline define:vars={{ gaId }} slot="head">
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', gaId);
  </script>

  <div class="capacity-banner">
    <span class="pulse">‚óè</span> Currently Accepting New Referrals ‚Äî Immediate Capacity Australia-Wide
  </div>

  <section class="hero">
    <div class="container">
      <div class="hero-grid">
        <div class="hero-content">
          <p class="kicker">Registered NDIS Practitioner</p>
          <h1 class="h1">Syed Bokhari</h1>
          <p class="p hero-description">
            I provide positive, respectful, and evidence-informed behaviour support to NDIS participants, families, and provider teams across Australia.
          </p>

          <div class="hero-highlights">
            <div class="highlight">
              <span class="check">‚úì</span>
              <span><strong>Registered Practitioner</strong> - NDIS Quality & Safeguards Commission</span>
            </div>
            <div class="highlight">
              <span class="check">‚úì</span>
              <span><strong>Evidence-Based</strong> - Functional Behaviour Assessments (FBA)</span>
            </div>
            <div class="highlight">
              <span class="check">‚úì</span>
              <span><strong>Australia-Wide</strong> - Available via Telehealth & On-site</span>
            </div>
          </div>

          <div class="actions">
            <a class="btn btn-primary" href="/contact">Book Free Consultation</a>
            <a class="btn btn-secondary" href="/services">View All Services</a>
          </div>

          <div class="contact-info">
            <p class="small">
              üìß <a href="mailto:syed@syedbokhari.com.au">syed@syedbokhari.com.au</a> | 
              üì± <a href="tel:0411072466">0411 072 466</a>
            </p>
          </div>

          <div class="notice registration-box">
            <strong>‚úÖ Registration & Compliance:</strong>
            <p class="small">
              I am a <strong>Registered Behaviour Support Practitioner</strong> regulated by the NDIS Quality and Safeguards Commission. 
              My services are delivered with professional supervision through registered providers, ensuring full NDIS compliance and clinical excellence.
            </p>
          </div>
        </div>

        <div class="hero-image">
          <div class="photo-card">
            <img
              src="/images/headshot.jpg"
              alt="Syed Bokhari - NDIS Behaviour Support"
              loading="eager"
            />
            <div class="photo-caption">
              <strong>Syed Bokhari</strong><br>
              <small>Registered Behaviour Support Practitioner</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="services-overview">
    <div class="container">
      <h2 class="text-center h2 mb-3">Professional Support Services</h2>
      <div class="grid-three">
        <div class="card service-card">
          <div class="service-icon">üîç</div>
          <h3>Functional Assessment</h3>
          <p>Comprehensive assessments to understand behaviour triggers and functions.</p>
        </div>
        <div class="card service-card">
          <div class="service-icon">üìã</div>
          <h3>PBS Plan Development</h3>
          <p>NDIS-aligned plans focused on quality of life and skill development.</p>
        </div>
        <div class="card service-card">
          <div class="service-icon">ü§ù</div>
          <h3>Implementation Support</h3>
          <p>Coaching and training for families and support teams.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container text-center">
      <h2>Ready to Improve Quality of Life?</h2>
      <p>Contact me today for a free initial consultation regarding your NDIS goals.</p>
      <div class="cta-actions">
        <a href="/contact" class="btn btn-white">Get Started</a>
        <a href="tel:0411072466" class="btn btn-outline-white">Call 0411 072 466</a>
      </div>
    </div>
  </section>

  <style>
    /* UNIFIED PROFESSIONAL STYLES */
    :root {
      --primary: #1a365d;    /* Professional Navy */
      --secondary: #2c7a7b;  /* Calming Teal */
      --success: #10b981;    /* "Capacity" Green */
      --bg-light: #f8fafc;   /* Light gray/blue bg */
      --white: #ffffff;
      --text: #334155;
    }

    body { color: var(--text); }

    .capacity-banner {
      background: var(--success);
      color: white;
      text-align: center;
      padding: 10px;
      font-weight: bold;
      font-size: 0.9rem;
    }

    .pulse { animation: opacityPulse 2s infinite; margin-right: 5px; color: white; }
    @keyframes opacityPulse { 0% { opacity: 1; } 50% { opacity: 0.4; } 100% { opacity: 1; } }

    .hero { padding: 4rem 0; background: white; }
    .kicker { color: var(--secondary); font-weight: bold; text-transform: uppercase; margin-bottom: 0.5rem; }
    
    .hero-grid {
      display: grid;
      grid-template-columns: 1.5fr 1fr;
      gap: 3rem;
      align-items: center;
    }

    .registration-box {
      background: #f1f5f9;
      border-left: 4px solid var(--primary);
      padding: 1.5rem;
      border-radius: 8px;
      margin-top: 2rem;
    }

    .photo-card {
      background: white;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.05);
      text-align: center;
    }

    .photo-card img { width: 100%; border-radius: 8px; }

    .btn {
      padding: 0.8rem 1.8rem;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
      display: inline-block;
      transition: 0.3s;
    }

    .btn-primary { background: var(--primary); color: white; }
    .btn-secondary { border: 2px solid var(--primary); color: var(--primary); }
    .btn-white { background: white; color: var(--primary); }
    .btn-outline-white { border: 2px solid white; color: white; }

    .grid-three {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      margin-top: 2rem;
    }

    .service-card {
      background: var(--bg-light);
      padding: 2rem;
      border-radius: 12px;
      text-align: center;
    }

    .cta-section {
      background: var(--primary);
      color: white;
      padding: 4rem 0;
      margin-top: 3rem;
    }

    .cta-actions { display: flex; gap: 1rem; justify-content: center; margin-top: 2rem; }

    @media (max-width: 768px) {
      .hero-grid { grid-template-columns: 1fr; text-align: center; }
      .hero-image { order: -1; }
      .cta-actions { flex-direction: column; }
    }

    .container { max-width: 1100px; margin: 0 auto; padding: 0 1.5rem; }
    .text-center { text-align: center; }
    .small { font-size: 0.85rem; line-height: 1.4; }
  </style>
</BaseLayout>