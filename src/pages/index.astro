  <style>
    :root {
      --primary: #1a365d;
      --secondary: #2c7a7b;
      --success: #10b981;
      --bg-light: #f8fafc;
      --white: #ffffff;
      --text: #334155;
    }

    body { color: var(--text); font-family: system-ui, -apple-system, sans-serif; }

    .capacity-banner {
      background: var(--success);
      color: white;
      text-align: center;
      padding: 12px;
      font-weight: bold;
      font-size: 0.95rem;
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .pulse { animation: opacityPulse 2s infinite; margin-right: 5px; }
    @keyframes opacityPulse { 0% { opacity: 1; } 50% { opacity: 0.4; } 100% { opacity: 1; } }

    .hero { padding: 5rem 0; background: white; }
    .kicker { color: var(--secondary); font-weight: bold; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 0.5rem; }
    
    .hero-grid {
      display: grid;
      grid-template-columns: 1.4fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .hero-description { font-size: 1.2rem; line-height: 1.6; margin-bottom: 2rem; }

    .highlight { display: flex; align-items: flex-start; gap: 10px; margin-bottom: 12px; font-size: 1rem; }
    .check { color: var(--success); font-weight: bold; }

    .registration-box {
      background: #f1f5f9;
      border-left: 5px solid var(--primary);
      padding: 2rem;
      border-radius: 8px;
      margin: 3rem 0;
    }

    .photo-card {
      background: white;
      padding: 1rem;
      border-radius: 15px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.1);
      text-align: center;
    }
    .photo-card img { width: 100%; border-radius: 10px; filter: grayscale(10%); }

    .btn { padding: 1rem 2rem; border-radius: 8px; text-decoration: none; font-weight: 700; transition: 0.3s; cursor: pointer; }
    .btn-primary { background: var(--primary); color: white; border: none; }
    .btn-primary:hover { background: #2a4365; transform: translateY(-2px); }
    .btn-secondary { border: 2px solid var(--primary); color: var(--primary); }

    .grid-three { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2.5rem; }
    
    .service-card {
      background: var(--bg-light);
      padding: 2.5rem;
      border-radius: 15px;
      transition: 0.3s;
      border: 1px solid #e2e8f0;
    }
    .service-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.05); }
    .service-icon { font-size: 2.5rem; margin-bottom: 1rem; }
    .text-link { color: var(--secondary); font-weight: bold; text-decoration: none; display: block; margin-top: 1rem; }

    .why-me { padding: 4rem 0; background: #fff; }
    .trust-item h4 { color: var(--primary); margin-bottom: 0.5rem; }

    .cta-section { background: var(--primary); color: white; padding: 5rem 0; text-align: center; }
    .cta-actions { display: flex; gap: 1.5rem; justify-content: center; margin-top: 2.5rem; }
    .btn-white { background: white; color: var(--primary); }
    .btn-outline-white { border: 2px solid white; color: white; }

    @media (max-width: 992px) {
      .hero-grid { grid-template-columns: 1fr; text-align: center; }
      .hero-image { order: -1; max-width: 400px; margin: 0 auto; }
      .highlight { justify-content: center; }
      .cta-actions { flex-direction: column; align-items: center; }
    }

    .container { max-width: 1200px; margin: 0 auto; padding: 0 2rem; }
    .h1 { font-size: 3rem; color: var(--primary); line-height: 1.2; margin-bottom: 1.5rem; }
    .mb-3 { margin-bottom: 2rem; }
  </style>
</BaseLayout>