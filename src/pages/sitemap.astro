---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Sitemap | Syed Bokhari – NDIS Behaviour Support";
const description =
  "Complete sitemap for syedbokhari.com.au including all service pages, referral pathways, coordinator resources, and legal information.";
const pathname = Astro.url.pathname;
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <!-- HEADER -->
  <section class="page-header">
    <div class="container">
      <h1 class="h1">Website Sitemap</h1>
      <p class="subtitle">A structured overview of all pages on syedbokhari.com.au</p>
    </div>
  </section>

  <!-- PRIMARY NAVIGATION -->
  <section class="sitemap-section">
    <div class="container">
      <h2 class="h2">Primary Pages</h2>

      <div class="sitemap-grid">
        <div class="sitemap-item">
          <h3><a href="/">Home</a></h3>
          <p>Overview of Behaviour Support services and practitioner credentials.</p>
        </div>

        <div class="sitemap-item">
          <h3><a href="/about">About</a></h3>
          <p>Professional background, qualifications, and practice philosophy.</p>
        </div>

        <div class="sitemap-item">
          <h3><a href="/services">Services</a></h3>
          <p>Functional Behaviour Assessments, PBS Plans, and implementation support.</p>
        </div>

        <div class="sitemap-item">
          <h3><a href="/coordinators">Support Coordinators</a></h3>
          <p>Capacity, compliance, and referral information for NDIS professionals.</p>
        </div>

        <div class="sitemap-item">
          <h3><a href="/referrals">Referral Portal</a></h3>
          <p>Secure intake form for new participant referrals.</p>
        </div>

        <div class="sitemap-item">
          <h3><a href="/contact">Contact</a></h3>
          <p>General enquiries, collaboration, and booking options.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- BLOG / RESOURCES -->
  <section class="sitemap-section alt">
    <div class="container">
      <h2 class="h2">Educational Resources</h2>

      <div class="sitemap-grid">
        <div class="sitemap-item">
          <h3><a href="/blog/understanding-suitable-practitioners">What is an NDIS Suitable Practitioner?</a></h3>
          <p>Explaining the NDIS Commission’s suitability levels.</p>
        </div>

        <div class="sitemap-item">
          <h3><a href="/blog/signs-ndis-participant-needs-behaviour-support">5 Signs a Participant Needs PBS</a></h3>
          <p>Indicators that behaviour support may improve quality of life.</p>
        </div>

        <div class="sitemap-item">
          <h3><a href="/blog/functional-behaviour-assessment-process">The FBA Process Explained</a></h3>
          <p>How Functional Behaviour Assessments guide effective PBS Plans.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ADMIN / LEGAL -->
  <section class="sitemap-section">
    <div class="container">
      <h2 class="h2">Administrative & Legal</h2>

      <div class="quick-links-grid">
        <div class="quick-link-card">
          <h3>Compliance</h3>
          <div class="link-list">
            <a href="/privacy">Privacy Policy</a>
            <a href="/thank-you">Enquiry Confirmation</a>
          </div>
        </div>

        <div class="quick-link-card">
          <h3>Technical</h3>
          <div class="link-list">
            <a href="/sitemap.xml">XML Sitemap</a>
            <a href="/robots.txt">Robots.txt</a>
          </div>
        </div>

        <div class="quick-link-card">
          <h3>External</h3>
          <div class="link-list">
            <a href="https://www.ndiscommission.gov.au" target="_blank">NDIS Commission</a>
            <a href="https://www.linkedin.com/in/syed-fr-bokhari/" target="_blank">LinkedIn Profile</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- META -->
  <section class="sitemap-section meta">
    <div class="container">
      <p class="meta-line"><strong>Practitioner ID:</strong> P1636047</p>
      <p class="meta-line">
        <strong>Last Updated:</strong>
        {new Date().toLocaleDateString("en-AU", {
          year: "numeric",
          month: "long",
          day: "numeric",
        })}
      </p>
    </div>
  </section>
</BaseLayout>

<style>
  :root {
    --primary: #1a365d;
    --secondary: #2c7a7b;
    --border: #e2e8f0;
  }

  .page-header {
    background: linear-gradient(135deg, #0f172a, #1e293b);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .subtitle {
    opacity: 0.85;
    margin-top: 0.5rem;
  }

  .sitemap-section {
    padding: 4rem 0;
  }

  .sitemap-section.alt {
    background: #f8fafc;
  }

  .sitemap-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .sitemap-item {
    background: white;
    padding: 1.75rem;
    border-radius: 12px;
    border: 1px solid var(--border);
    transition: 0.2s ease;
  }

  .sitemap-item:hover {
    border-color: var(--secondary);
    transform: translateY(-2px);
  }

  .sitemap-item h3 a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 700;
  }

  .sitemap-item p {
    color: #64748b;
    font-size: 0.9rem;
    margin-top: 0.5rem;
  }

  .quick-links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .quick-link-card h3 {
    margin-bottom: 1rem;
    color: var(--primary);
  }

  .link-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .link-list a {
    color: #475569;
    text-decoration: none;
    font-size: 0.95rem;
  }

  .link-list a:hover {
    color: var(--secondary);
    text-decoration: underline;
  }

  .meta {
    text-align: center;
    color: #94a3b8;
    font-size: 0.85rem;
    border-top: 1px solid var(--border);
    padding-top: 2rem;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }
  }
</style>