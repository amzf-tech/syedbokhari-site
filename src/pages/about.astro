<style>
  /* Root Colors matching your brand */
  :root {
    --primary: #1a365d;
    --secondary: #2c7a7b;
    --bg-light: #f8fafc;
  }

  .page-header {
    background: var(--bg-light);
    padding: 4rem 0;
    text-align: center;
    border-bottom: 1px solid #e2e8f0;
  }
  
  .page-header h1 { font-size: 2.5rem; color: var(--primary); }
  .subtitle { font-size: 1.2rem; color: var(--secondary); font-weight: 600; }

  .professional-overview, .qualifications, .practice-approach, .registration-status, .connect-cta {
    padding: 4rem 0;
  }

  .overview-grid { display: grid; grid-template-columns: 1.2fr 0.8fr; gap: 3rem; align-items: center; }
  
  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    background: #f0fdf4;
    color: #166534;
    padding: 0.8rem 1.2rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.9rem;
    border: 1px solid #bbf7d0;
    margin-top: 1.5rem;
  }

  .status-indicator {
    width: 10px;
    height: 10px;
    background: #22c55e;
    border-radius: 50%;
  }

  .social-links { display: flex; gap: 1rem; margin-top: 2rem; }
  .social-link {
    text-decoration: none;
    background: var(--primary);
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    transition: 0.3s;
  }
  .social-link:hover { opacity: 0.9; transform: translateY(-2px); }

  .photo-card img { width: 100%; border-radius: 12px; box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1); }

  .qualifications-grid, .approach-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .qualification-card, .approach-card {
    background: var(--bg-light);
    padding: 2.5rem;
    border-radius: 12px;
    text-align: center;
    border: 1px solid #e2e8f0;
  }

  .status-card {
    background: var(--primary);
    color: white;
    padding: 3rem;
    border-radius: 16px;
  }

  .notice {
    background: rgba(255,255,255,0.1);
    border-left: 4px solid var(--secondary);
    padding: 1.5rem;
    margin-top: 2rem;
  }

  .connect-cta { background: var(--primary); color: white; text-align: center; }
  .connect-options { display: flex; gap: 1rem; justify-content: center; margin-top: 2rem; }
  
  .btn { padding: 1rem 2rem; border-radius: 8px; font-weight: 700; text-decoration: none; transition: 0.3s; }
  .btn-primary { background: var(--secondary); color: white; }
  .btn-secondary { border: 2px solid white; color: white; }
  .btn:hover { transform: translateY(-2px); box-shadow: 0 4px 6px rgba(0,0,0,0.1); }

  .container { max-width: 1100px; margin: 0 auto; padding: 0 1.5rem; }

  @media (max-width: 768px) {
    .overview-grid { grid-template-columns: 1fr; }
    .connect-options { flex-direction: column; }
    .page-header h1 { font-size: 2rem; }
  }
</style>