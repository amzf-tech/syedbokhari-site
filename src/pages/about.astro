---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

const title = "About Syed Bokhari | NDIS Behaviour Support Practitioner | ID: P1636047";
const description =
  "Learn about Syed Bokhari, an NDIS Suitable Behaviour Support Practitioner (P1636047) providing evidence-informed Positive Behaviour Support, Functional Behaviour Assessments, and trauma-informed practice.";
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <!-- PAGE HEADER -->
  <section class="page-header">
    <div class="container">
      <h1 class="h1">About Syed Bokhari</h1>
      <p class="subtitle">NDIS Behaviour Support Practitioner (ID: P1636047)</p>
    </div>
  </section>

  <!-- PROFESSIONAL OVERVIEW -->
  <section class="professional-overview">
    <div class="container">
      <div class="overview-grid">
        <div class="content-card">
          <p class="kicker">Professional Background</p>
          <h2 class="h2">Supporting Participants with Respect, Insight & Evidence</h2>

          <p class="p lead">
            I am an <strong>NDIS Behaviour Support Practitioner</strong> deemed suitable by the NDIS Quality and Safeguards Commission.
            My work focuses on understanding the function of behaviour, building practical skills, and supporting participants to live
            safer, more independent, and more meaningful lives.
          </p>

          <p class="p">
            My approach is grounded in Positive Behaviour Support (PBS), trauma-informed practice, and a strong commitment to human
            rights. I work collaboratively with families, Support Coordinators, and providers to ensure strategies are practical,
            respectful, and aligned with each participant‚Äôs goals.
          </p>

          <div class="status-badge">
            <span class="status-indicator"></span>
            <span>Assessed as Suitable (ID: P1636047) ‚Äî NDIS Commission</span>
          </div>

          <div class="profile-download">
            <a href="/profile.pdf" target="_blank" rel="noopener" class="profile-link">
              üìÑ Download Professional Profile (PDF)
            </a>
          </div>

          <div class="social-links">
            <a href="https://www.linkedin.com/in/syed-fr-bokhari/" target="_blank" rel="noopener noreferrer" class="social-link">
              üíº LinkedIn
            </a>
            <a href="https://www.facebook.com/syedbokharibsp" target="_blank" rel="noopener noreferrer" class="social-link">
              üìò Facebook
            </a>
          </div>
        </div>

        <div class="photo-card">
          <img
            src="/images/headshot.jpg"
            alt="Syed Bokhari - NDIS Behaviour Support Practitioner P1636047"
            loading="lazy"
          />
          <div class="photo-caption">
            <strong>Syed Bokhari</strong><br />
            <small>NDIS Behaviour Support Practitioner</small>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- QUALIFICATIONS -->
  <section class="qualifications">
    <div class="container">
      <h2 class="h2 text-center">Academic Foundation</h2>
      <p class="text-center text-secondary mb-4">
        A strong academic background supporting clinical reasoning and evidence-informed practice.
      </p>

      <div class="qualifications-grid">
        <div class="qualification-card">
          <div class="qual-icon">üéì</div>
          <h3>Bachelor of Biomedicine</h3>
          <p>Provides a deep understanding of biological, neurological, and physiological factors influencing behaviour.</p>
        </div>

        <div class="qualification-card">
          <div class="qual-icon">üìö</div>
          <h3>Master of Arts</h3>
          <p>Strengthens communication, analysis, and the ability to understand complex human systems and environments.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- PRACTICE APPROACH -->
  <section class="practice-approach">
    <div class="container">
      <h2 class="h2 text-center">My Practice Philosophy</h2>
      <p class="text-center text-secondary mb-4">
        Every plan is grounded in dignity, safety, and evidence.
      </p>

      <div class="approach-grid">
        <div class="approach-card">
          <div class="approach-icon">üë§</div>
          <h4>Person-Centred</h4>
          <p>Every strategy is tailored to the participant‚Äôs strengths, preferences, and goals.</p>
        </div>

        <div class="approach-card">
          <div class="approach-icon">üß†</div>
          <h4>Trauma-Informed</h4>
          <p>Recognising the impact of past experiences and ensuring support is safe, respectful, and predictable.</p>
        </div>

        <div class="approach-card">
          <div class="approach-icon">üìä</div>
          <h4>Evidence-Informed</h4>
          <p>Using Functional Behaviour Assessments (FBA) and data to guide meaningful, sustainable change.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- REGISTRATION & COMPLIANCE -->
  <section class="registration-status">
    <div class="container">
      <div class="status-card">
        <h2 class="h2">Compliance & Clinical Governance</h2>
        <p class="p">
          My practice aligns with the NDIS Capability Framework and the NDIS Quality and Safeguards Commission requirements.
          Behaviour Support Plans are developed with a focus on safety, skill-building, and the reduction or elimination of
          restrictive practices.
        </p>

        <div class="notice" role="note">
          <strong>üìù Practitioner Registration Details:</strong>
