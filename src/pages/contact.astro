---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

const title = "Contact Syed Bokhari | NDIS Behaviour Support Enquiry";
const description = "Get in touch for NDIS behaviour support enquiries, referrals, or administrative support across Australia.";
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <section class="contact-header">
    <div class="container">
      <p class="kicker">Get In Touch</p>
      <h1 class="h1">How can I help you today?</h1>
      <p class="subtitle">Please select the most relevant contact method below to ensure a timely response.</p>
    </div>
  </section>

  <section class="contact-channels">
    <div class="container">
      <div class="channels-grid">
        
        <div class="channel-card highlight">
          <div class="channel-icon">üìù</div>
          <h3>New Referrals</h3>
          <p>Support Coordinators or families looking to start services for a new participant.</p>
          <a href="/referrals" class="btn btn-primary">Go to Referral Form</a>
          <span class="email-link">referrals@syedbokhari.com.au</span>
        </div>

        <div class="channel-card">
          <div class="channel-icon">üí¨</div>
          <h3>General Enquiries</h3>
          <p>General questions about PBS, my approach, or service availability.</p>
          <a href="mailto:enquiries@syedbokhari.com.au" class="btn btn-outline">Email Enquiries</a>
          <span class="email-link">enquiries@syedbokhari.com.au</span>
        </div>

        <div class="channel-card">
          <div class="channel-icon">üõ†Ô∏è</div>
          <h3>Existing Support</h3>
          <p>For current participants, provider teams, or family members already working with me.</p>
          <a href="mailto:support@syedbokhari.com.au" class="btn btn-outline">Email Support</a>
          <span class="email-link">support@syedbokhari.com.au</span>
        </div>

      </div>
    </div>
  </section>

  <section class="booking-form-section">
    <div class="container">
      <div class="dual-column">
        
        <div class="calendly-intro">
          <h2>Book a 30-Min Consultation</h2>
          <p>Prefer to speak directly? Schedule a 30-minute introductory meeting via Calendly to discuss your needs in detail.</p>
          
          <div class="calendly-embed-container">
            <a href="https://calendly.com/syed-syedbokhari/30min" target="_blank" class="btn btn-primary btn-large">Schedule Meeting on Calendly</a>
            <p class="small-note">Opens in a new tab</p>
          </div>

          <div class="admin-note">
            <strong>Admin & Billing:</strong> For accounts or invoicing, please contact <a href="mailto:admin@syedbokhari.com.au">admin@syedbokhari.com.au</a>
          </div>
        </div>

        <div class="form-wrapper">
          <div class="contact-form-card">
            <h3>Quick Message</h3>
            <p>Send a quick enquiry and I will respond via email within 2 business days.</p>
            
            <form action="https://formspree.io/f/mykegzwn" method="POST" class="contact-form">
              <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" id="name" name="name" required placeholder="Full Name" />
              </div>
              <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="_replyto" required placeholder="email@example.com" />
              </div>
              <div class="form-group">
                <label for="message">Your Message</label>
                <textarea id="message" name="message" rows="5" required placeholder="How can I help?"></textarea>
              </div>
              
              <input type="hidden" name="_next" value="https://syedbokhari.com.au/thank-you" />
              <input type="hidden" name="_subject" value="New Website General Enquiry" />
              
              <button type="submit" class="btn btn-primary full-width">Send Message</button>
            </form>
          </div>
        </div>

      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-header {
    background: #f8fafc;
    padding: 5rem 0 3rem;
    text-align: center;
  }

  .channels-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: -2rem 0 4rem;
  }

  .channel-card {
    background: white;
    padding: 2.5rem;
    border-radius: 16px;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    text-align: center;
    border: 1px solid #e2e8f0;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: transform 0.2s ease;
  }

  .channel-card.highlight {
    border: 2px solid var(--primary);
    transform: scale(1.05);
    z-index: 10;
  }

  .channel-icon { font-size: 3rem; margin-bottom: 1rem; }

  .email-link {
    margin-top: 1.5rem;
    font-size: 0.85rem;
    color: var(--muted);
    font-family: monospace;
  }

  .booking-form-section { padding: 5rem 0; background: #fff; }

  .dual-column {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .calendly-intro h2 { margin-bottom: 1.5rem; }
  .calendly-embed-container { margin: 2rem 0; }
  .small-note { font-size: 0.8rem; color: var(--muted); margin-top: 0.5rem; }

  .admin-note {
    margin-top: 3rem;
    padding: 1.5rem;
    background: #f1f5f9;
    border-radius: 12px;
    font-size: 0.95rem;
    border-left: 4px solid var(--primary);
  }

  .contact-form-card {
    background: #f8fafc;
    padding: 2.5rem;
    border-radius: 16px;
    border: 1px solid var(--border);
  }

  .contact-form-card h3 { margin-bottom: 0.5rem; }

  .form-group { margin-bottom: 1.5rem; }
  
  label { display: block; margin-bottom: 0.5rem; font-weight: 600; color: #1e293b; }

  input, textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #cbd5e1;
    border-radius: 6px;
    font-family: inherit;
  }

  .full-width { width: 100%; }

  @media (max-width: 992px) {
    .dual-column { grid-template-columns: 1fr; gap: 3rem; }
    .channel-card.highlight { transform: none; }
  }
</style>