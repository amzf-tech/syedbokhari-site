---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

const title = "Contact Syed Bokhari | NDIS Behaviour Support Enquiries";
const description = "Get in touch with Syed Bokhari for professional behaviour support enquiries. Free consultation available. Phone: 0411 072 466, Email: syed@syedbokhari.com.au";
