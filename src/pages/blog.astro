---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

// Example Data (Later you can move this to Content Collections)
const posts = [
  {
    title: "Understanding the 4 Functions of Behaviour",
    description: "A guide for families and carers on why certain behaviours occur and how we identify the underlying need.",
    date: "Jan 15, 2026",
    category: "PBS Basics",
    slug: "functions-of-behaviour"
  },
  {
    title: "How to Prepare for an FBA",
    description: "What to expect when a Behaviour Support Practitioner visits for a Functional Behaviour Assessment.",
    date: "Jan 02, 2026",
    category: "Assessment",
    slug: "preparing-for-fba"
  },
  {
    title: "Restrictive Practices: What You Need to Know",
    description: "A look at the NDIS Commission's requirements for reporting and reducing restrictive practices.",
    date: "Dec 18, 2025",
    category: "Compliance",
    slug: "restrictive-practices-ndis"
  }
];

const title = "PBS Insights & Blog | Syed Bokhari";
const description = "Educational resources and insights on Positive Behaviour Support (PBS) and the NDIS for families and providers.";
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <section class="blog-hero">
    <div class="container">
      <p class="kicker">Resources & Insights</p>
      <h1 class="h1">The PBS Blog</h1>
      <p class="subtitle">Evidence-based strategies and NDIS updates to support meaningful change.</p>
    </div>
  </section>

  <section class="blog-grid-section">
    <div class="container">
      <div class="blog-grid">
        {posts.map(post => (
          <article class="post-card">
            <div class="post-meta">
              <span class="category-badge">{post.category}</span>
              <time>{post.date}</time>
            </div>
            <h2 class="h3">{post.title}</h2>
            <p class="post-excerpt">{post.description}</p>
            <a href={`/blog/${post.slug}`} class="read-more">
              Read Article <span>â†’</span>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="blog-cta">
    <div class="container text-center">
      <h2 class="h2">Have a specific topic in mind?</h2>
      <p>If there's a particular aspect of behaviour support you'd like to learn about, let me know.</p>
      <a href="/contact" class="btn btn-primary" style="margin-top: 1.5rem;">Suggest a Topic</a>
    </div>
  </section>
</BaseLayout>

<style>
  .blog-hero {
    padding: 5rem 0 3rem;
    text-align: center;
    background: #f8fafc;
    border-bottom: 1px solid var(--border);
  }

  .blog-grid-section {
    padding: 5rem 0;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
  }

  .post-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--border);
    transition: transform 0.2s, box-shadow 0.2s;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 20px -5px rgba(0, 0, 0, 0.1);
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.25rem;
  }

  .category-badge {
    background: #eff6ff;
    color: var(--primary);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
  }

  .post-meta time {
    font-size: 0.85rem;
    color: var(--muted);
  }

  .post-excerpt {
    color: var(--muted);
    margin: 1rem 0 2rem;
    flex-grow: 1;
    line-height: 1.6;
  }

  .read-more {
    font-weight: 700;
    color: var(--primary);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .read-more span {
    transition: transform 0.2s;
  }

  .read-more:hover span {
    transform: translateX(5px);
  }

  .blog-cta {
    padding: 5rem 0;
    background: #1e293b;
    color: white;
  }

  .blog-cta h2 { color: white; }

  @media (max-width: 768px) {
    .blog-grid { grid-template-columns: 1fr; }
  }
</style>