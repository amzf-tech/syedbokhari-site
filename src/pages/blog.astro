---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

/** * Note: These slugs MUST match the keys in your [slug].astro file.
 * This ensures the links function correctly after your recent cleanup.
 */
const posts = [
  {
    title: "The Importance of Working with a Registered Practitioner",
    description: "Learn how NDIS registration ensures clinical accountability, safety, and higher standards of care in PBS.",
    date: "Jan 20, 2026",
    category: "Clinical Standards",
    slug: "why-work-with-a-registered-practitioner"
  },
  {
    title: "Understanding the FBA Process",
    description: "A comprehensive guide to Functional Behaviour Assessment - the foundation of effective behaviour support.",
    date: "Dec 20, 2025",
    category: "Clinical Assessment",
    slug: "functional-behaviour-assessment-process"
  },
  {
    title: "Preparing for Your First Meeting",
    description: "What to expect and how to prepare for your initial consultation with a Behaviour Support Practitioner.",
    date: "Nov 15, 2025",
    category: "Participant Guide",
    slug: "preparing-first-behaviour-support-meeting"
  },
  {
    title: "Signs a Participant Needs PBS",
    description: "How to identify when Positive Behaviour Support is the right choice for an NDIS participant.",
    date: "Nov 01, 2025",
    category: "NDIS Navigation",
    slug: "signs-ndis-participant-needs-behaviour-support"
  }
];

const title = "PBS Insights & Resources | Syed Bokhari";
const description = "Educational resources on Positive Behaviour Support (PBS) and NDIS clinical standards for families and providers.";
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <section class="blog-hero">
    <div class="container">
      <p class="kicker">Resources & Insights</p>
      <h1 class="h1">The PBS Blog</h1>
      <p class="subtitle">Evidence-based strategies and NDIS updates to support meaningful change.</p>
    </div>
  </section>

  <section class="blog-grid-section">
    <div class="container">
      <div class="blog-grid">
        {posts.map(post => (
          <article class="post-card">
            <div class="post-meta">
              <span class="category-badge">{post.category}</span>
              <time>{post.date}</time>
            </div>
            <h2 class="h3">{post.title}</h2>
            <p class="post-excerpt">{post.description}</p>
            <a href={`/blog/${post.slug}`} class="read-more">
              Read Article <span>â†’</span>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="blog-cta">
    <div class="container text-center">
      <h2 class="h2">Have a specific topic in mind?</h2>
      <p>If there's a particular aspect of behaviour support you'd like to learn about, let me know.</p>
      <a href="/contact" class="btn btn-primary" style="margin-top: 1.5rem; background: white; color: #1e293b; border: none;">Suggest a Topic</a>
    </div>
  </section>
</BaseLayout>

<style>
  .blog-hero {
    padding: 6rem 0 4rem;
    text-align: center;
    background: #f8fafc;
    border-bottom: 1px solid var(--border);
  }

  .blog-grid-section {
    padding: 5rem 0;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
  }

  .post-card {
    background: white;
    padding: 2.5rem;
    border-radius: 16px;
    border: 1px solid var(--border);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    border-color: var(--primary);
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.25rem;
  }

  .category-badge {
    background: #eff6ff;
    color: var(--primary);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 800;
    text-transform: uppercase;
  }

  .post-meta time {
    font-size: 0.85rem;
    color: var(--muted);
    font-weight: 500;
  }

  .h3 { margin-bottom: 1rem; color: #1e293b; line-height: 1.3; }

  .post-excerpt {
    color: var(--muted);
    margin-bottom: 2rem;
    flex-grow: 1;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .read-more {
    font-weight: 700;
    color: var(--primary);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
  }

  .read-more span { transition: transform 0.2s; }
  .read-more:hover span { transform: translateX(5px); }

  .blog-cta {
    padding: 6rem 0;
    background: #1e293b;
    color: white;
  }
  .blog-cta h2 { color: white; margin-bottom: 1rem; }
  .blog-cta p { opacity: 0.9; }

  @media (max-width: 768px) {
    .blog-grid { grid-template-columns: 1fr; }
    .blog-hero { padding: 4rem 0 2rem; }
  }
</style>