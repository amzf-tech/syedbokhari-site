---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

/** * Updated slugs to match the new content structure.
 * This ensures clinical accuracy and high SEO performance.
 */
const posts = [
  {
    title: "Understanding NDIS Practitioner Suitability",
    description: "Learn what the NDIS Suitability assessment means for quality of care and participant safety.",
    date: "Jan 22, 2026",
    category: "Clinical Standards",
    slug: "understanding-your-practitioner-suitability-id"
  },
  {
    title: "Understanding the FBA Process",
    description: "A comprehensive guide to Functional Behaviour Assessment - the foundation of effective behaviour support.",
    date: "Dec 20, 2025",
    category: "Clinical Assessment",
    slug: "functional-behaviour-assessment-process"
  },
  {
    title: "Preparing for Your First Meeting",
    description: "What to expect and how to prepare for your initial consultation with a Behaviour Support Practitioner.",
    date: "Nov 15, 2025",
    category: "Participant Guide",
    slug: "preparing-first-behaviour-support-meeting"
  },
  {
    title: "Signs a Participant Needs PBS",
    description: "How to identify when Positive Behaviour Support is the right choice for an NDIS participant.",
    date: "Nov 01, 2025",
    category: "NDIS Navigation",
    slug: "signs-ndis-participant-needs-behaviour-support"
  }
];

const title = "PBS Insights & Resources | Syed Bokhari | ID: P1636047";
const description = "Educational resources on Positive Behaviour Support (PBS) and NDIS clinical standards from an assessed Suitable Practitioner.";
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <section class="blog-hero">
    <div class="container">
      <p class="kicker">Resources & Insights</p>
      <h1 class="h1">The PBS Blog</h1>
      <p class="subtitle">Evidence-based strategies, clinical standards, and NDIS updates for families and providers.</p>
    </div>
  </section>

  <section class="blog-grid-section">
    <div class="container">
      <div class="blog-grid">
        {posts.map(post => (
          <article class="post-card">
            <div class="post-meta">
              <span class="category-badge">{post.category}</span>
              <time>{post.date}</time>
            </div>
            <h2 class="h3">{post.title}</h2>
            <p class="post-excerpt">{post.description}</p>
            <a href={`/blog/${post.slug}`} class="read-more">
              Read Article <span>â†’</span>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="blog-cta">
    <div class="container text-center">
      <h2 class="h2">Need expert clinical advice?</h2>
      <p>I am currently accepting new referrals for NDIS participants with immediate capacity.</p>
      <div class="cta-actions" style="margin-top: 2rem; display: flex; gap: 1rem; justify-content: center;">
        <a href="/referrals" class="btn" style="background: white; color: #1e293b; border: none; font-weight: bold; padding: 0.8rem 1.5rem; border-radius: 8px; text-decoration: none;">Submit Referral</a>
        <a href="/contact" class="btn" style="border: 2px solid white; color: white; font-weight: bold; padding: 0.8rem 1.5rem; border-radius: 8px; text-decoration: none;">Contact Me</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  :root {
    --primary: #1a365d;
    --border: #e2e8f0;
    --muted: #64748b;
  }

  .blog-hero {
    padding: 6rem 0 4rem;
    text-align: center;
    background: #f8fafc;
    border-bottom: 1px solid var(--border);
  }

  .kicker { color: #2c7a7b; font-weight: bold; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 1rem; }

  .blog-grid-section {
    padding: 5rem 0;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
  }

  .post-card {
    background: white;
    padding: 2.5rem;
    border-radius: 16px;
    border: 1px solid var(--border);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    text-decoration: none;
  }

  .post-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    border-color: var(--primary);
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.25rem;
  }

  .category-badge {
    background: #eff6ff;
    color: var(--primary);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 800;
    text-transform: uppercase;
  }

  .post-meta time {
    font-size: 0.85rem;
    color: var(--muted);
    font-weight: 500;
  }

  .h3 { margin-bottom: 1rem; color: #0f172a; line-height: 1.3; font-size: 1.5rem; }

  .post-excerpt {
    color: var(--muted);
    margin-bottom: 2rem;
    flex-grow: 1;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .read-more {
    font-weight: 700;
    color: var(--primary);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
  }

  .read-more span { transition: transform 0.2s; }
  .read-more:hover span { transform: translateX(5px); }

  .blog-cta {
    padding: 6rem 0;
    background: #1e293b;
    color: white;
  }
  .blog-cta h2 { color: white; margin-bottom: 1rem; }
  .blog-cta p { opacity: 0.9; }

  @media (max-width: 768px) {
    .blog-grid { grid-template-columns: 1fr; }
    .blog-hero { padding: 4rem 0 2rem; }
    .cta-actions { flex-direction: column; align-items: center; }
  }
</style>