---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

const title = "NDIS Behaviour Support Services | Syed Bokhari | ID: P1636047";
const description =
  "NDIS Suitable Behaviour Support Practitioner providing Functional Behaviour Assessments, Positive Behaviour Support Plans, and implementation coaching. Specialist expertise in complex NDIS systems and compliance.";
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <!-- HERO -->
  <section class="services-hero">
    <div class="container">
      <p class="kicker">NDIS Suitable Practitioner ‚Ä¢ ID: P1636047</p>
      <h1 class="h1">Evidence-Informed Behaviour Support Services</h1>
      <p class="subtitle">
        Supporting participants with Functional Behaviour Assessments, Positive Behaviour Support Plans, and
        implementation coaching. Clinical practice informed by experience as a former NDIA Senior Complex Support Needs Planner.
      </p>

      <div class="hero-actions">
        <a href="/referrals" class="btn btn-primary btn-large">Make a Referral</a>
        <a href="tel:0411072466" class="btn btn-outline btn-large">Call 0411 072 466</a>
      </div>
    </div>
  </section>

  <!-- CORE SERVICES -->
  <section class="core-services">
    <div class="container">
      <div class="section-header text-center">
        <h2 class="h2">Specialist Behaviour Support Services</h2>
        <p class="text-secondary">
          Delivered in alignment with the NDIS Quality and Safeguards Commission Capability Framework.
        </p>
      </div>

      <div class="services-grid">
        <!-- FBA -->
        <div class="service-card">
          <div class="service-icon">üìä</div>
          <h3>Functional Behaviour Assessment (FBA)</h3>
          <p>
            A comprehensive assessment to understand the function of behaviours of concern using evidence-informed
            frameworks such as SEAT (Sensory, Escape, Attention, Tangible).
          </p>

          <ul class="service-list">
            <li>Identification of environmental and contextual triggers</li>
            <li>Baseline data collection and analysis</li>
            <li>Risk identification and safety planning</li>
          </ul>
        </div>

        <!-- PBS Plans -->
        <div class="service-card highlight">
          <div class="service-icon">üìù</div>
          <h3>Positive Behaviour Support (PBS) Plans</h3>
          <p>
            Development of high-quality, compliant PBS plans focused on proactive strategies, skill-building, and the
            reduction of regulated restrictive practices.
          </p>

          <ul class="service-list">
            <li>Proactive and reactive strategy development</li>
            <li>Least-restrictive practice focus and phase-out planning</li>
            <li>Direct lodging via the NDIS Commission Portal</li>
          </ul>
        </div>

        <!-- Implementation -->
        <div class="service-card">
          <div class="service-icon">ü§ù</div>
          <h3>Implementation & Coaching</h3>
          <p>
            Practical, hands-on support to ensure strategies are implemented consistently and safely across all
            environments.
          </p>

          <ul class="service-list">
            <li>Competency-based coaching for carers and support workers</li>
            <li>Ongoing reviews and data-driven monitoring</li>
            <li>Collaboration with therapists and multidisciplinary teams</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- PROCESS -->
  <section id="process" class="process-section">
    <div class="container">
      <div class="process-wrapper">
        <div class="process-content">
          <h2 class="h2 text-center">The Behaviour Support Process</h2>
          <p class="text-center mb-5">
            A structured, transparent approach informed by clinical practice and deep understanding of NDIS systems.
          </p>

          <div class="process-steps">
            <div class="process-step">
              <span class="step-num">01</span>
              <div class="step-text">
                <h4>Intake & Ethical Fit</h4>
                <p>
                  Initial consultation to understand goals, assess suitability, and ensure the participant‚Äôs rights and
                  preferences guide the process.
                </p>
              </div>
            </div>

            <div class="process-step">
              <span class="step-num">02</span>
              <div class="step-text">
                <h4>Evidence Gathering</h4>
                <p>
                  Data collection through observation, interviews, and review of existing reports to build a clear
                  understanding of behaviour and context.
                </p>
              </div>
            </div>

            <div class="process-step">
              <span class="step-num">03</span>
              <div class="step-text">
                <h4>Plan Development</h4>
                <p>
                  Development of a comprehensive PBS plan aligned with NDIS legislation, practice guidance, and the
                  participant‚Äôs goals.
                </p>
              </div>
            </div>

            <div class="process-step">
              <span class="step-num">04</span>
              <div class="step-text">
                <h4>Active Implementation</h4>
                <p>
                  Coaching, training, and ongoing monitoring to ensure strategies are effective, safe, and consistently
                  applied.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="faq-section">
    <div class="container">
      <h2 class="h2 text-center">Provider & Coordinator FAQs</h2>

      <div class="faq-grid">
        <div class="faq-item">
          <h4>What is your current capacity?</h4>
          <p>
            I maintain <strong>immediate capacity</strong> for assessments and PBS plans Australia-wide via Telehealth,
            and locally in Melbourne West.
          </p>
        </div>

        <div class="faq-item">
          <h4>How do you handle travel?</h4>
          <p>
            Travel is charged at the standard NDIS rate. I service Tarneit, Werribee, Melton, and surrounding areas.
          </p>
        </div>

        <div class="faq-item">
          <h4>Are you a Suitable Practitioner?</h4>
          <p>
            Yes ‚Äî I am an <strong>NDIS Suitable Behaviour Support Practitioner (ID: P1636047)</strong>, regulated by the
            NDIS Commission.
          </p>
        </div>

        <div class="faq-item">
          <h4>Do you support restrictive practice reporting?</h4>
          <p>
            Yes. I specialise in reducing and eliminating regulated restrictive practices through proactive strategies,
            environmental adjustments, and skill-building.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="final-cta">
    <div class="container text-center">
      <h2 class="h2">Ready to Begin?</h2>
      <p>As an independent practitioner, I offer personalised support without long waitlists.</p>

      <div class="cta-btns">
        <a href="/referrals" class="btn btn-primary btn-large">Submit Referral Form</a>
        <a href="/contact" class="btn btn-outline btn-large" style="background: white; color: var(--primary);">
          Book Case Discussion
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  :root {
    --primary: #1a365d;
    --secondary: #2c7a7b;
  }

  .services-hero {
    padding: 6rem 0;
    text-align: center;
    background: #f8fafc;
    border-bottom: 1px solid #e2e8f0;
  }

  .kicker {
    color: var(--secondary);
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }

  .core-services {
    padding: 5rem 0;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .service-card {
    background: white;
    padding: 2.5rem;
    border-radius: 16px;
    border: 1px solid #e2e8f0;
    transition: all 0.3s ease;
  }

  .service-card.highlight {
    border-top: 5px solid var(--primary);
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.08);
  }

  .service-list {
    text-align: left;
    margin-top: 1.5rem;
    padding-left: 1.2rem;
  }

  .service-list li {
    margin-bottom: 0.5rem;
  }

  .process-section {
    padding: 6rem 0;
    background: #fff;
  }

  .process-steps {
    margin-top: 4rem;
    display: grid;
    gap: 2.5rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .process-step {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
    text-align: left;
  }

  .step-num {
    font-weight: 900;
    color: var(--primary);
    font-size: 2.5rem;
    opacity: 0.15;
    line-height: 1;
  }

  .faq-section {
    padding: 6rem 0;
    background: #f8fafc;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 3rem;
    margin-top: 3rem;
  }

  .faq-item h4 {
    color: var(--primary);
    margin-bottom: 0.75rem;
  }

  .final-cta {
    padding: 6rem 0;
    background: #1e293b;
    color: white;
  }

  .final-cta h2 {
    color: white;
    margin-bottom: 1rem;
  }

  .cta-btns {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-top: 3rem;
  }

  .btn {
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 700;
    text-decoration: none;
    display: inline-block;
    transition: 0.3s;
  }

  .btn-primary {
    background: var(--secondary);
    color: white;
  }

  .btn-outline {
    border: 2px solid var(--secondary);
    color: var(--secondary);
  }

  @media (max-width: 768px) {
    .hero-actions,
    .cta-btns {
      flex-direction: column;
      padding: 0 2rem;
    }

    .process-step {
      flex-direction: column;
      gap: 0.5rem;
    }

    .faq-grid {
      grid-template-columns: 1fr;
    }
  }
</style>