---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

const title = "Services | Syed Bokhari";
const description =
  "NDIS behaviour support services by Syed Bokhari, including functional assessment support, BSP development, and implementation support. BSP application submitted and pending.";
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <section class="container">
    <p class="kicker">Services</p>
    <h1 class="h1">NDIS Behaviour Support Services</h1>

    <div class="card pad">
      <p class="p">
        This page outlines my practice focus in behaviour support for NDIS participants and provider teams.
        <strong> Behaviour Support Practitioner application submitted and pending.</strong>
        Service delivery arrangements are discussed with providers consistent with applicable NDIS requirements.
      </p>

      <div class="notice">
        <strong>Registration status:</strong>
        <span class="small">
          Behaviour Support Practitioner application submitted and pending.
          Services are provided consistent with applicable NDIS requirements and standards.
        </span>
      </div>

      <hr class="rule" />

      <h2 class="h2">Core service areas</h2>
      <ul class="list">
        <li>Information gathering and structured intake with the support network</li>
        <li>Functional behaviour assessment support (under supervision)</li>
        <li>Behaviour Support Plan (BSP) development and review (as applicable)</li>
        <li>Implementation support, coaching, and consistency planning</li>
        <li>Behaviour-related risk identification and safety considerations</li>
      </ul>

      <hr class="rule" />

      <h2 class="h2">Who this is for</h2>
      <ul class="list">
        <li>NDIS registered providers</li>
        <li>Support coordinators</li>
        <li>Plan managers</li>
        <li>Multidisciplinary teams supporting NDIS participants</li>
      </ul>

      <hr class="rule" />

      <h2 class="h2">Professional profile</h2>
      <p class="p">
        A concise professional profile outlining my experience, qualifications, and practice approach
        is available for provider reference.
      </p>

      <p class="p">
        <a href="/profile.pdf" target="_blank" rel="noopener noreferrer">
          Download professional profile (PDF)
        </a>
      </p>

      <hr class="rule" />

      <h2 class="h2">Professional enquiries</h2>
      <p class="p">
        For provider partnerships and contracting enquiries:
      </p>

      <p class="contact">
        <strong>Email:</strong>
        <a href="mailto:syed@syedbokhari.com.au">syed@syedbokhari.com.au</a>
        <span class="dot">Â·</span>
        <strong>Phone:</strong>
        <a href="tel:0411072466">0411 072 466</a>
      </p>

      <p class="p" style="margin-top:1rem">
        You can also use the <a href="/contact">Contact</a> page.
      </p>
    </div>
  </section>

  <style>
    .pad { padding: 1.5rem; }

    .notice {
      margin-top: 1.25rem;
      padding: 1rem;
      border: 1px solid rgba(15, 23, 42, 0.15);
      border-radius: 12px;
      background: rgba(255, 255, 255, 0.85);
    }

    .small {
      display: block;
      margin-top: 0.25rem;
      color: #475569;
      font-size: 0.95rem;
    }

    .rule {
      border: 0;
      border-top: 1px solid rgba(15, 23, 42, 0.12);
      margin: 1.5rem 0;
    }

    .list {
      margin: 0.75rem 0 0;
      padding-left: 1.1rem;
      color: #475569;
    }

    .list li {
      margin: 0.35rem 0;
    }

    .contact {
      margin-top: 0.5rem;
      color: #0f172a;
    }

    .contact a {
      color: inherit;
    }

    .dot {
      margin: 0 0.5rem;
      color: #475569;
    }

    @media (max-width: 520px) {
      .dot { display: none; }
      .contact { display: grid; gap: 0.35rem; }
    }
  </style>
</BaseLayout>
