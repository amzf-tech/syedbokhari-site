<style>
  :root {
    --primary: #1a365d;
    --secondary: #2c7a7b;
    --border: #e2e8f0;
    --muted: #64748b;
  }

  .sc-hero {
    padding: 5rem 0 3rem;
    background: #f8fafc;
    text-align: center;
    border-bottom: 1px solid var(--border);
  }

  .kicker {
    color: var(--secondary);
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1rem;
  }

  .capacity-bar {
    background: #0f172a;
    color: white;
    padding: 1.2rem 0;
    text-align: center;
  }

  .pulse {
    height: 10px;
    width: 10px;
    background: #22c55e;
    border-radius: 50%;
    display: inline-block;
    margin-right: 10px;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(34, 197, 94, 0); }
    100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0); }
  }

  .sc-grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 4rem;
    padding: 4rem 0;
  }

  .value-prop {
    margin-bottom: 2.5rem;
  }

  .value-prop h4 {
    margin-bottom: 0.5rem;
    color: var(--primary);
    font-size: 1.2rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .divider {
    border: 0;
    border-top: 1px solid #e2e8f0;
    margin: 2rem 0;
  }

  .suburb-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .suburb-tags span {
    background: #eff6ff;
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    font-size: 0.85rem;
    color: var(--primary);
    font-weight: 700;
  }

  .resource-links .text-link {
    display: block;
    margin-top: 0.5rem;
    color: var(--secondary);
    font-weight: 600;
    text-decoration: none;
  }

  .resource-links .text-link:hover {
    text-decoration: underline;
  }

  .referral-box {
    background: white;
    padding: 2.5rem;
    border-radius: 16px;
    border: 2px solid var(--primary);
    height: fit-content;
    position: sticky;
    top: 40px;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .contact-divider {
    text-align: center;
    margin: 1.5rem 0;
    font-size: 0.75rem;
    color: #94a3b8;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .direct-contact {
    text-align: center;
    margin-bottom: 1.5rem;
    padding: 1.25rem;
    background: #f8fafc;
    border-radius: 12px;
    border: 1px dashed #cbd5e1;
  }

  .contact-label {
    font-size: 0.85rem;
    color: #64748b;
    margin-bottom: 0.25rem;
  }

  .phone-link {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--primary);
    text-decoration: none;
    display: block;
  }

  .btn {
    padding: 1rem;
    border-radius: 8px;
    font-weight: 700;
    text-decoration: none;
    display: block;
    text-align: center;
    cursor: pointer;
    border: none;
    font-size: 1rem;
    transition: 0.3s;
  }

  .btn-primary {
    background: var(--primary);
    color: white;
  }

  .btn-outline {
    border: 2px solid var(--primary);
    color: var(--primary);
    background: transparent;
  }

  .full-width {
    width: 100%;
    margin-bottom: 1rem;
  }

  .btn:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .compliance-badge {
    text-align: center;
    margin-top: 1.5rem;
    color: var(--muted);
    font-size: 0.75rem;
  }

  @media (max-width: 992px) {
    .sc-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .referral-box {
