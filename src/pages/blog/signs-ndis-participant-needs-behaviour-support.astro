---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "5 Signs Your NDIS Participant Might Benefit from Behaviour Support | Syed Bokhari";
const description = "Key indicators that suggest behaviour support could improve quality of life and help achieve NDIS goals.";
const category = "NDIS Support";
const date = "2026-01-05";
const readTime = "4 min read";
const tags = ["NDIS Goals", "Quality of Life", "Support Planning"];
const formattedDate = new Date(date).toLocaleDateString('en-AU', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title} pathname={Astro.url.pathname} description={description}>
  <!-- ARTICLE HEADER -->
  <article class="blog-post">
    <header class="article-header">
      <div class="container">
        <div class="article-meta">
          <span class="article-category">{category}</span>
          <span class="article-date">{formattedDate}</span>
          <span class="article-read-time">{readTime}</span>
        </div>
        
