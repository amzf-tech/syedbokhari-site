---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

const title = "Privacy Policy | Syed Bokhari - NDIS Behaviour Support";
const description =
  "Privacy and data protection policy for NDIS Behaviour Support services. NDIS Practitioner ID: P1636047.";
const lastUpdated = "27 January 2026";
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <!-- HEADER -->
  <section class="page-header">
    <div class="container">
      <p class="kicker">NDIS Practitioner ID: P1636047</p>
      <h1 class="h1">Privacy & Data Protection</h1>
      <p class="subtitle">Committed to the NDIS Quality and Safeguards Framework ‚Ä¢ Last updated: {lastUpdated}</p>
    </div>
  </section>

  <!-- OVERVIEW -->
  <section class="policy-overview">
    <div class="container">
      <div class="overview-card">
        <div class="overview-icon">üîí</div>
        <div class="overview-content">
          <h2 class="h2">Clinical Privacy Commitment</h2>
          <p class="p">
            As an <strong>NDIS Suitable Behaviour Support Practitioner</strong>, I comply with the
            <em>Privacy Act 1988</em>, the <em>Australian Privacy Principles (APPs)</em>, and the
            <em>NDIS Code of Conduct</em>. This policy explains how personal and sensitive information is collected,
            stored, used, and protected when engaging with <strong>syedbokhari.com.au</strong>.
          </p>

          <div class="policy-highlights">
            <span class="highlight">‚úì NDIS Commission Compliant</span>
            <span class="highlight">‚úì Secure Intake Protocols</span>
            <span class="highlight">‚úì Encrypted Data Handling</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- INFORMATION COLLECTION -->
  <section class="policy-sections">
    <div class="container">

      <div class="policy-section">
        <div class="section-header">
          <div class="section-icon">üìã</div>
          <h2 class="h2">Information I Collect</h2>
        </div>

        <div class="section-content">
          <p class="p">Information is collected only when necessary to provide Behaviour Support services or meet NDIS obligations.</p>

          <div class="info-types">
            <div class="info-type">
              <div class="type-icon">üë§</div>
              <div>
                <h4>Referrer Information</h4>
                <ul>
                  <li>Name and professional role</li>
                  <li>Organisation and contact details</li>
                </ul>
              </div>
            </div>

            <div class="info-type">
              <div class="type-icon">üß¨</div>
              <div>
                <h4>Participant Information</h4>
                <ul>
                  <li>Name, age, and location</li>
                  <li>Behaviours of concern and support needs</li>
                  <li>Restrictive Practice status</li>
                </ul>
              </div>
            </div>

            <div class="info-type">
              <div class="type-icon">üõ°Ô∏è</div>
              <div>
                <h4>NDIS‚ÄëRelated Information</h4>
                <ul>
                  <li>Funding management type</li>
                  <li>Support Coordinator details</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- MANDATORY REPORTING -->
      <div class="policy-section warning-section">
        <div class="section-header">
          <div class="section-icon warning-icon">‚öñÔ∏è</div>
          <h2 class="h2">NDIS Commission Reporting</h2>
        </div>

        <div class="section-content">
          <div class="warning-card">
            <p class="p">
              <strong>Mandatory Disclosure:</strong> Under the
              <em>NDIS (Restrictive Practices and Behaviour Support) Rules 2018</em>, I am legally required to report
              the use of <strong>Regulated Restrictive Practices</strong> to the NDIS Quality and Safeguards Commission.
              This includes reporting, monitoring, and lodging Behaviour Support Plans.
            </p>
          </div>
        </div>
      </div>

      <!-- FORM PROCESSING -->
      <div class="policy-section">
        <div class="section-header">
          <div class="section-icon">üìß</div>
          <h2 class="h2">Secure Form Processing</h2>
        </div>

        <div class="section-content">
          <div class="formspree-info">
            <div class="formspree-logo">
              <span class="logo-text">Formspree</span>
              <span class="logo-badge">SSL Encrypted</span>
            </div>

            <p class="p">
              Referral and contact forms submitted through this website are processed securely via
              <strong>Formspree</strong>, which provides encrypted form transmission. Formspree acts as a
              <strong>data processor only</strong> and does not use or sell your information. Once received, data is
              transferred to a secure clinical management environment.
            </p>
          </div>
        </div>
      </div>

      <!-- COOKIES & ANALYTICS -->
      <div class="policy-section">
        <div class="section-header">
          <div class="section-icon">üç™</div>
          <h2 class="h2">Cookies & Website Analytics</h2>
        </div>

        <div class="section-content">
          <p class="p">
            This website uses basic analytics tools (such as Google Analytics) to understand website performance. These
            tools may collect:
          </p>

          <ul class="p">
            <li>Browser type and device information</li>
            <li>Pages visited and time spent on the site</li>
            <li>General location (non‚Äëidentifiable)</li>
          </ul>

          <p class="p">
            No clinical or sensitive information is collected through analytics. You may disable cookies in your browser
            settings at any time.
          </p>
        </div>
      </div>

      <!-- STORAGE & RETENTION -->
      <div class="policy-section">
        <div class="section-header">
          <div class="section-icon">üîê</div>
          <h2 class="h2">Storage & Retention</h2>
        </div>

        <div class="section-content">
          <p class="p">
            Clinical records are stored securely and retained in accordance with Australian health record legislation:
            typically <strong>7 years</strong>, or until a minor turns <strong>25</strong>.
          </p>

          <div class="security-measures">
            <div class="measures-grid">
              <div class="measure">‚úÖ Multi‚ÄëFactor Authentication</div>
              <div class="measure">‚úÖ Periodic Data Audits</div>
              <div class="measure">‚úÖ De‚Äëidentification Protocols</div>
            </div>
          </div>
        </div>
      </div>

      <!-- YOUR RIGHTS -->
      <div class="policy-section">
        <div class="section-header">
          <div class="section-icon">üìù</div>
          <h2 class="h2">Your Rights</h2>
        </div>

        <div class="section-content">
          <p class="p">Under the Australian Privacy Principles, you have the right to:</p>

          <ul class="p">
            <li>Request access to your personal information</li>
            <li>Request corrections to inaccurate information</li>
            <li>Withdraw consent for non‚Äëmandatory data collection</li>
            <li>Request deletion where legally appropriate</li>
          </ul>
        </div>
      </div>

      <!-- COMPLAINTS -->
      <div class="policy-section">
        <div class="section-header">
          <div class="section-icon">üì£</div>
          <h2 class="h2">How to Make a Privacy Complaint</h2>
        </div>

        <div class="section-content">
          <p class="p">If you have concerns about how your information is handled, you may contact:</p>

          <ul class="p">
            <li><strong>Privacy Officer:</strong> <a href="mailto:admin@syedbokhari.com.au">admin@syedbokhari.com.au</a></li>
            <li><strong>NDIS Quality and Safeguards Commission:</strong> 1800 035 544</li>
            <li><strong>Office of the Australian Information Commissioner (OAIC):</strong> oaic.gov.au</li>
          </ul>
        </div>
      </div>

    </div>
  </section>

  <!-- FOOTER CONTACT -->
  <section class="policy-updates">
    <div class="container">
      <div class="updates-card">
        <h2 class="h2">Privacy Officer</h2>
        <p class="p">For access requests or corrections, contact:</p>
        <div class="privacy-contact">
          <a href="mailto:admin@syedbokhari.com.au">admin@syedbokhari.com.au</a>
        </div>
        <div class="update-info">
          <strong>Practitioner:</strong> Syed Bokhari (Suitable)
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  :root {
    --primary: #1a365d;
    --secondary: #2c7a7b;
    --border: #e2e8f0;
    --text: #334155;
    --muted: #64748b;
  }

  .page-header {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: white;
    padding: 5rem 0 4rem;
    text-align: center;
  }

  .kicker {
    color: #38bdf8;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.1rem;
    opacity: 0.8;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .policy-overview {
    padding: 4rem 0;
    background: #f8fafc;
  }

  .overview-card {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    display: flex;
    gap: 2.5rem;
    align-items: center;
    border: 1px solid var(--border);
  }

  .overview-icon {
    font-size: 3.5rem;
  }

  .highlight {
    background: #f0fdf4;
    color: #166534;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 700;
    margin-right: 0.5rem;
    display: inline-block;
    margin-top: 1rem;
    border: 1px solid #bbf7d0;
  }

  .policy-sections {
    padding: 5rem 0;
  }

  .policy-section {
    margin-bottom: 5rem;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .section-icon {
    font-size: 2rem;
    background: #f1f5f9;
    padding: 0.75rem;
    border-radius: 12px;
  }

  .info-types {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2.5rem;
  }

  .info-type {
    background: #f8fafc;
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--border);
  }

  .info-type h4 {
    margin-bottom: 1rem;
    color: var(--primary);
  }

  .info-type ul {
    padding-left: 1.2rem;
    font-size: 0.95rem;
    color: var(--text);
  }

  .warning-section {
    background: #fff7ed;
    border-radius: 20px;
    padding: 2.5rem;
    border: 1px solid #ffedd5;
  }

  .warning-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    border-left: 6px solid #f97316;
  }

  .formspree-info {
    background: #f1f5f9;
    padding: 2rem;
    border-radius: 16px;
    border-left: 6px solid var(--secondary);
  }

  .logo-text {
    font-weight: 800;
    color: #e51a4b;
  }

  .logo-badge {
    background: #1e293b;
    color: white;
    padding: 0.3rem 0.75rem;
    font-size: 0.7rem;
    border-radius: 6px;
    margin-left: 0.75rem;
    text-transform: uppercase;
    font-weight: bold;
  }

  .measures-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 2rem;
  }

  .measure {
    background: #f0f9ff;
    color: #075985;
    padding: 0.75rem 1.25rem;
    border-radius: 10px;
    font-size: 0.9rem;
    font-weight: 700;
    border: 1px solid #bae6fd;
  }

  .policy-updates {
    background: #f8fafc;
    padding: 5rem 0;
    text-align: center;
    border-top: 1px solid var(--border);
  }

  .privacy-contact a {
    font-size: 1.5rem;
    color: var(--secondary);
    font-weight: 800;
    text-decoration: none;
  }

  .update-info {
    margin-top: 2rem;
    font-size: 0.9rem;
    color: var(--muted);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .overview-card {
      flex-direction: column;
      text-align: center;
      padding: 2rem;
    }

    .page-header h1 {
      font-size: 2.2rem;
    }
  }
</style>