---
import BaseLayout from "../layouts/BaseLayout.astro";
const pathname = Astro.url.pathname;

const title = "Privacy Policy | Syed Bokhari - NDIS Behaviour Support";
const description = "Privacy policy for syedbokhari.com.au. How personal information is collected, used, stored, and disclosed for behaviour support enquiries.";
const lastUpdated = "19 December 2025";
---

<BaseLayout title={title} pathname={pathname} description={description}>
  <section class="page-header">
    <div class="container">
      <p class="kicker">Privacy Policy</p>
      <h1 class="h1">How We Protect Your Information</h1>
      <p class="subtitle">Last updated: {lastUpdated}</p>
    </div>
  </section>

  <section class="policy-overview">
    <div class="container">
      <div class="overview-card">
        <div class="overview-icon">üîí</div>
        <div class="overview-content">
          <h2 class="h2">Overview</h2>
          <p class="p">
            This Privacy Policy explains how personal information is collected and handled when you visit
            <strong>syedbokhari.com.au</strong> and when you contact Syed Bokhari regarding behaviour support enquiries.
            This site is intended for professional enquiries and general contact.
          </p>
          <div class="policy-highlights">
            <span class="highlight">‚úì No sensitive data via contact form</span>
            <span class="highlight">‚úì Professional enquiries only</span>
            <span class="highlight">‚úì Secure third-party form processing</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="policy-sections">
    <div class="container">
      
      <div class="policy-section">
        <div class="section-header">
          <div class="section-icon">üìã</div>
          <h2 class="h2">What Information May Be Collected</h2>
        </div>
        
        <div class="section-content">
          <p class="p">
            If you contact me via the website contact form, email, or phone, the information collected may include:
          </p>
          
          <div class="info-types">
            <div class="info-type">
              <div class="type-icon">üë§</div>
              <div>
                <h4>Personal Information</h4>
                <ul>
                  <li>Your name</li>
                  <li>Your email address</li>
                  <li>Your phone number (if provided)</li>
                </ul>
              </div>
            </div>
            
            <div class="info-type">
              <div class="type-icon">üí¨</div>
              <div>
                <h4>Communication Details</h4>
                <ul>
                  <li>The content of your message</li>
                  <li>Enquiry type and purpose</li>
                </ul>
              </div>
            </div>
            
            <div class="info-type">
              <div class="type-icon">üîß</div>
              <div>
                <h4>Technical Information</h4>
                <ul>
                  <li>IP address and browser details</li>
                  <li>Standard internet logs</li>
                  <li>Website usage analytics</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="policy-section warning-section">
        <div class="section-header">
          <div class="section-icon warning-icon">‚ö†Ô∏è</div>
          <h2 class="h2">Sensitive Information Warning</h2>
        </div>
        
        <div class="section-content">
          <div class="warning-card">
            <p class="p">
              <strong>Please do not include sensitive personal information in the website contact form.</strong> 
              If you are an NDIS participant (or contacting on behalf of one), sensitive details should be shared only 
              through appropriate, secure channels after initial contact and confirmation of arrangements.
            </p>
            
            <div class="sensitive-examples">
              <h4>Examples of information NOT to include:</h4>
              <div class="examples-grid">
                <div class="example-item">‚ùå Detailed medical history</div>
                <div class="example-item">‚ùå NDIS plan numbers</div>
                <div class="example-item">‚ùå Detailed behavioural incidents</div>
                <div class="example-item">‚ùå Financial information</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="policy-section">
        <div class="section-header">
          <div class="section-icon">üìß</div>
          <h2 class="h2">Third-Party Processing</h2>
        </div>
        
        <div class="section-content">
          <div class="formspree-info">
            <div class="formspree-logo">
              <span class="logo-text">Formspree</span>
              <span class="logo-badge">Secure Processor</span>
            </div>
            <p class="p">
              The contact form on this website is processed by <strong>Formspree</strong>. 
              When you submit a message, your data is transmitted securely to deliver it to my professional inbox. 
              By using the form, you acknowledge their processing of your data in accordance with their privacy standards.
            </p>
          </div>
        </div>
      </div>

      <div class="policy-section">
        <div class="section-header">
          <div class="section-icon">üîê</div>
          <h2 class="h2">Storage and Security</h2>
        </div>
        
        <div class="section-content">
          <p class="p">
            I take reasonable steps to protect your information from unauthorized access. 
            Information is stored securely using encrypted professional email and document management systems.
          </p>
          
          <div class="security-measures">
            <h4>Data Retention & Cleanup:</h4>
            <p class="p">
              Enquiry data is periodically reviewed. If an enquiry does not result in a formal Service Agreement, 
              personal details are typically de-identified or securely destroyed within 12 months, 
              unless required for legal or insurance record-keeping.
            </p>
            <div class="measures-grid">
              <div class="measure">‚úÖ Encrypted Communication</div>
              <div class="measure">‚úÖ Regular Data Review</div>
              <div class="measure">‚úÖ Limited Access Protocols</div>
            </div>
          </div>
        </div>
      </div>

      <div class="policy-section">
        <div class="section-header">
          <div class="section-icon">üìù</div>
          <h2 class="h2">Access and Correction</h2>
        </div>
        
        <div class="section-content">
          <p class="p">
            You may request access to personal information I hold about you at any time. 
            If you believe the information is inaccurate or out of date, please contact me to request a correction.
          </p>
        </div>
      </div>

    </div>
  </section>

  <section class="policy-updates">
    <div class="container">
      <div class="updates-card">
        <h2 class="h2">Privacy Enquiries</h2>
        <p class="p">
          If you have questions about how your privacy is managed, please reach out directly:
        </p>
        <div class="privacy-contact">
          <a href="mailto:syed@syedbokhari.com.au">syed@syedbokhari.com.au</a>
        </div>
        <div class="update-info">
          <strong>Next Review:</strong> June 2026
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Header Styles */
  .page-header {
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }
  
  .subtitle {
    font-size: 1.1rem;
    opacity: 0.8;
  }

  /* Layout and Containers */
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .policy-overview {
    padding: 4rem 0;
    background: #f8fafc;
  }

  .overview-card {
    background: white;
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .overview-icon { font-size: 3.5rem; }

  .highlight {
    background: #ecfdf5;
    color: #065f46;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-right: 0.5rem;
    display: inline-block;
    margin-top: 0.5rem;
  }

  /* Section Styling */
  .policy-sections { padding: 4rem 0; }

  .policy-section {
    margin-bottom: 4rem;
    max-width: 850px;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .section-icon { font-size: 2.5rem; }

  /* Info Grid */
  .info-types {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .info-type {
    background: #f8fafc;
    padding: 1.5rem;
    border-radius: 12px;
    display: flex;
    gap: 1rem;
  }

  .info-type h4 { margin-bottom: 0.5rem; }
  .info-type ul { padding-left: 1.2rem; font-size: 0.95rem; }

  /* Warning Section */
  .warning-section {
    background: #fffbeb;
    border-radius: 16px;
    padding: 2rem;
    border: 1px solid #fde68a;
  }

  .warning-card { background: white; padding: 1.5rem; border-radius: 12px; }

  .examples-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .example-item {
    background: #fef2f2;
    color: #991b1b;
    padding: 0.75rem;
    border-radius: 8px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  /* Formspree & Security */
  .formspree-info {
    background: #f1f5f9;
    padding: 1.5rem;
    border-radius: 12px;
    border-left: 4px solid #2563eb;
  }

  .logo-badge {
    background: #2563eb;
    color: white;
    padding: 0.2rem 0.6rem;
    font-size: 0.75rem;
    border-radius: 4px;
    margin-left: 0.5rem;
  }

  .measures-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .measure {
    background: #ecfdf5;
    color: #065f46;
    padding: 0.75rem 1.25rem;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .policy-updates {
    background: #f8fafc;
    padding: 4rem 0;
    text-align: center;
  }

  .updates-card {
    max-width: 600px;
    margin: 0 auto;
  }

  .privacy-contact a {
    font-size: 1.25rem;
    color: #2563eb;
    font-weight: 600;
    text-decoration: none;
  }

  .update-info {
    margin-top: 2rem;
    font-size: 0.9rem;
    color: #64748b;
  }

  @media (max-width: 768px) {
    .overview-card { flex-direction: column; text-align: center; }
    .page-header h1 { font-size: 2rem; }
  }
</style>