---
const {
  title = "Syed Bokhari | NDIS Behaviour Support Practitioner (Registration Pending)",
  description = "NDIS Behaviour Support Practitioner (BSP application submitted and pending).",
  pathname,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />

    <!-- Structured data for SEO -->
    <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Person",
          "@id": "https://syedbokhari.com.au/#person",
          "name": "Syed Bokhari",
          "jobTitle": "Behaviour Support Practitioner (Core – Under Supervision)",
          "url": "https://syedbokhari.com.au",
          "sameAs": [
            "https://www.linkedin.com/in/syed-fr-bokhari/"
          ],
          "contactPoint": {
            "@type": "ContactPoint",
            "telephone": "+61-411-072-466",
            "contactType": "professional enquiries",
            "email": "syed@syedbokhari.com.au"
          }
        },
        {
          "@type": "ProfessionalService",
          "@id": "https://syedbokhari.com.au/#service",
          "name": "Syed Bokhari Behaviour Support Services",
          "url": "https://syedbokhari.com.au",
          "provider": {
            "@id": "https://syedbokhari.com.au/#person"
          },
          "areaServed": {
            "@type": "Country",
            "name": "Australia"
          },
          "knowsAbout": [
            "Positive Behaviour Support",
            "Functional Behaviour Assessment",
            "Behaviour Support Plans",
            "NDIS behaviour support"
          ]
        }
      ]
    })}
    </script>
  </head>

  <body>
    <div class="bg">
      <header class="site-header">
        <div class="container header-inner">
          <a class="brand" href="/">
            <img src="/images/logo.png" alt="Syed Bokhari logo" width="40" height="40" />
            <span class="brand-text">Syed Bokhari</span>
          </a>

          <nav class="nav" aria-label="Primary">
            <a href="/services">Services</a>
            <a href="/about">About</a>
            <a href="/privacy">Privacy</a>
            <a href="/contact" class="pill">Contact</a>
          </nav>
        </div>
      </header>

      <main class="site-main">
        <slot />
      </main>

      <footer class="site-footer">
        <div class="container footer-inner">
          <div>
            <div class="kicker">NDIS Behaviour Support Practitioner</div>
            <div class="p" style="margin-top:0.25rem">
              Behaviour Support Practitioner application submitted and pending.
              Services provided consistent with applicable NDIS requirements.
            </div>
          </div>

          <div class="footer-links">
            <a
              href="https://www.linkedin.com/in/syed-fr-bokhari/"
              target="_blank"
              rel="noopener noreferrer"
            >
              LinkedIn
            </a>
            <a href="/privacy">Privacy</a>
            <a href="/contact">Contact</a>
          </div>
        </div>
      </footer>
    </div>

    <style>
      .bg{
        min-height:100%;
        background:
          radial-gradient(900px 500px at 15% 10%, rgba(15,23,42,0.06), transparent 60%),
          radial-gradient(900px 500px at 85% 0%, rgba(2,132,199,0.06), transparent 55%),
          url("/images/bg-grid.png");
        background-repeat: no-repeat, no-repeat, repeat;
        background-size: auto, auto, 380px 380px;
        background-attachment: scroll; /* KEY FIX: avoids “empty space” feel */
      }

      .site-header{
        position: sticky;
        top: 0;
        z-index: 10;
        backdrop-filter: blur(10px);
        background: rgba(255,255,255,0.75);
        border-bottom: 1px solid var(--border);
      }

      .header-inner{
        display:flex;
        align-items:center;
        justify-content:space-between;
        padding: 0.9rem 0;
        gap: 1rem;
      }

      .brand{
        display:flex;
        align-items:center;
        gap:0.6rem;
      }

      .brand-text{
        font-weight: 700;
        letter-spacing: 0.01em;
      }

      .nav{
        display:flex;
        align-items:center;
        gap: 1rem;
        flex-wrap: nowrap;
        white-space: nowrap;
      }

      .nav a{
        color: var(--muted);
        font-weight: 600;
      }

      .nav a.pill{
        padding: 0.5rem 0.85rem;
        border: 1px solid var(--border);
        border-radius: 999px;
        color: var(--text);
        background: rgba(255,255,255,0.9);
      }

      @media (max-width: 720px){
        .header-inner{
          flex-direction: column;
          align-items: flex-start;
        }
        .nav{
          width: 100%;
          white-space: normal;
          flex-wrap: wrap;
          row-gap: 0.5rem;
        }
      }

      .site-main{
        padding: 2.2rem 0 3rem;
      }

      .site-footer{
        border-top: 1px solid var(--border);
        background: rgba(255,255,255,0.8);
      }

      .footer-inner{
        display:flex;
        flex-direction:column;
        gap: 1rem;
        padding: 1.5rem 0;
      }

      .footer-links{
        display:flex;
        gap: 1rem;
        color: var(--muted);
      }

      @media(min-width:900px){
        .footer-inner{
          flex-direction:row;
          justify-content:space-between;
          align-items:flex-start;
        }
      }
    </style>
  </body>
</html>
