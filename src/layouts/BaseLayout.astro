---
const { title, description, pathname } = Astro.props;
const fullTitle = title ? `${title} | Syed Bokhari` : "Syed Bokhari";
const desc = description ?? "Syed Bokhari — Behaviour Support Practitioner (registration status transparently displayed).";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{fullTitle}</title>
    <meta name="description" content={desc} />
    <link rel="icon" type="image/png" href="/assets/logo.png" />
    <meta name="robots" content="index,follow" />
  </head>
  <body>
    <div class="container">
      <header class="nav">
        <a class="brandwrap" href="/" aria-label="Syed Bokhari Home">
          <span class="brandlogo" aria-hidden="true">
            <img src="/assets/logo.png" alt="" />
          </span>
          <span class="brandname">
            <strong>Syed Bokhari</strong>
            <span>Behaviour Support Practitioner</span>
          </span>
        </a>

        <nav class="navlinks" aria-label="Primary">
          <a href="/" aria-current={pathname === "/" ? "page" : undefined}>Home</a>
          <a href="/services" aria-current={pathname === "/services" ? "page" : undefined}>Services</a>
          <a href="/about" aria-current={pathname === "/about" ? "page" : undefined}>About</a>
          <a href="/contact" aria-current={pathname === "/contact" ? "page" : undefined}>Contact</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer class="footer">
        <div>© {new Date().getFullYear()} Syed Bokhari. All rights reserved.</div>
        <div class="small">This website does not claim NDIS Commission approval unless explicitly stated.</div>
      </footer>
    </div>

    <style is:global>@import "/src/styles/global.css";</style>
  </body>
</html>
